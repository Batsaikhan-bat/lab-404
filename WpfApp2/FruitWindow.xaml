<Window x:Class="WpfApp2.FruitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="FruitWindow" Height="250" Width="200">
    <StackPanel>
        <Label>Name:</Label>
        <TextBox x:Name="tb_name"></TextBox>
        <Label>Color:</Label>
        <TextBox x:Name="tb_color"></TextBox>
        <Label>Country:</Label>
        <TextBox x:Name="tb_country"></TextBox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="bt_ok" Click="bt_ok_Click">Ok</Button>
            <Button x:Name="bt_cancel" Grid.Column="1">Cancel</Button>
        </Grid>
    </StackPanel>
</Window>
