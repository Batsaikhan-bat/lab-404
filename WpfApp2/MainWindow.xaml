<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500" FontSize="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>
        <Button x:Name="bt_01" Click="bt_01_Click">...</Button>
        <ListView x:Name="lv_main" Grid.Row="1"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Name="bt_Add" Grid.Column="0" Content="Dodaj" Click="bt_Add_Click"/>
        <Button Name="bt_Edit" Grid.Column="1" Content="Edytuj" Click="bt_Edit_Click"/>
        <Button Name="bt_Delete" Grid.Column="2" Content="Usuń" Click="bt_Delete_Click"/>
        </Grid>
        
    </Grid>
</Window>
